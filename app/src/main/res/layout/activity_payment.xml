                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/guideline_e"
                app:layout_constraintStart_toEndOf="@+id/guideline_s"
                app:layout_constraintTop_toBottomOf="@+id/view4">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_marker_active"
                    android:fontFamily="@font/circularstd_book"
                    android:text="1"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/txt_paymnt_time"
                    app:layout_constraintStart_toStartOf="@+id/txt_verification_time"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view12"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/grey_txt"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_first"
                    app:layout_constraintEnd_toStartOf="@+id/txt_secnd"
                    app:layout_constraintStart_toEndOf="@+id/txt_first"
                    app:layout_constraintTop_toTopOf="@+id/txt_first" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_secnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_marker_inactive"
                    android:fontFamily="@font/circularstd_book"
                    android:text="2"
                    android:textColor="@color/grey_txt"
                    app:layout_constraintEnd_toStartOf="@+id/txt_third"
                    app:layout_constraintStart_toEndOf="@+id/txt_first"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/grey_txt"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_secnd"
                    app:layout_constraintEnd_toStartOf="@+id/txt_third"
                    app:layout_constraintStart_toEndOf="@+id/txt_secnd"
                    app:layout_constraintTop_toTopOf="@+id/txt_secnd" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_marker_inactive"
                    android:fontFamily="@font/circularstd_book"
                    android:text="3"
                    android:textColor="@color/grey_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/txt_del_time"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/circularstd_book"
                    android:text="@string/verification"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintEnd_toStartOf="@+id/view12"
                    app:layout_constraintStart_toStartOf="@+id/txt_first"
                    app:layout_constraintTop_toBottomOf="@+id/txt_first" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView96"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/circularstd_book"
                    android:text="@string/payment"
                    android:textColor="@color/grey_txt"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintEnd_toStartOf="@+id/view_2"
                    app:layout_constraintStart_toStartOf="@+id/txt_secnd"
                    app:layout_constraintTop_toBottomOf="@+id/txt_secnd" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_delivrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/circularstd_book"
                    android:text="@string/delivered"
                    android:textColor="@color/grey_txt"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintEnd_toEndOf="@+id/txt_third"
                    app:layout_constraintStart_toStartOf="@+id/txt_third"
                    app:layout_constraintTop_toBottomOf="@+id/txt_third" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_verification_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/circularstd_book"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/grey_txt"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toStartOf="@+id/txt_paymnt_time"
                    app:layout_constraintHorizontal_bias="0.459"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView95" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_verification_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularstd_book"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/grey_txt"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toStartOf="@+id/txt_paymnt_time"
                    app:layout_constraintHorizontal_bias="0.459"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_verification_time" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_paymnt_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/circularstd_book"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/grey_txt"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_del_time"
                    app:layout_constraintEnd_toStartOf="@+id/txt_del_time"
                    app:layout_constraintHorizontal_bias="0.177"
                    app:layout_constraintStart_toEndOf="@+id/txt_verification_time"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_verification_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularstd_book"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/grey_txt"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintTop_toBottomOf="@+id/txt_paymnt_time"
