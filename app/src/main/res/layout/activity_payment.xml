            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.57664233" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_order_wait"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/btn_verify"
                app:layout_constraintEnd_toStartOf="@+id/guideline_e"
                app:layout_constraintStart_toStartOf="@+id/guideline_s"
