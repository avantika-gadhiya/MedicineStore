                android:text=""
                android:textColor="@color/black_txt"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/guideline_e"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_s"
                app:layout_constraintTop_toBottomOf="@+id/txt_del_pref" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_geo_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_16"
                android:drawableStart="@drawable/google_pin"
                android:drawableTint="@color/reg_txt"
                android:fontFamily="@font/circularstd_book"
                android:text=""
                android:textColor="@color/reg_txt"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/guideline_e"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_s"
                app:layout_constraintTop_toBottomOf="@+id/txt_del_prefadd" />
            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/bg_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_geo_location" />


            <com.kofigyan.stateprogressbar.StateProgressBar
